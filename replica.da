flag = False
class Replica(process):
   replicaList = [] 
   id = 0
   def setup(id):
   	id = id
   	output("Replica ", id, " setup done")

   def receive(msg=(replicaList,)):
   	output(replicaList)
   	replicaList = replicaList
 
   def run():
   	output("Running Replica - ", id)
   	await(flag == True)
